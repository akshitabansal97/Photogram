%nav.navbar.navbar-default
	.navbar-container
		.navbar-header
			%button.navbar-toggle.collapsed{"data-target" => "#bs-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
				%span.sr-only Toggle Navigation
				%span.icon-bar
				%span.icon-bar
			.navbar-brand= link_to "Photogram", root_path
		.collapse.navbar-collapse#bs-navbar-collapse-1
			%ul.nav.navbar-nav.navbar-right
				%li
					= link_to "New Post", new_post_path
				%li
					= link_to "Login", '#'
				%li
					= link_to "Register", '#'

.post-wrapper.row
	-@post.each do |p|
		.post
			.post-head
				.name
					Akshi Feed
			.image.center-block
				=link_to (image_tag p.image.url(:medium), class:'img-responsive'), post_path(p)
			%p.caption
				=p.caption
